<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
        
    <ImageView
        android:id="@+id/imgDisplay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Swipe Up for Like" />

    <TextView
        android:id="@+id/NameMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgDisplay"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="24dp"
        android:text="Movie Name" />

    <TextView
        android:id="@+id/NameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgDisplay"
        android:layout_below="@+id/NameMovie"
        android:text="Movie Name" />

    <TextView
        android:id="@+id/ImdbRatingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_alignRight="@+id/imgDisplay"
        android:layout_marginBottom="18dp"
        android:text="IMDB Rating" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ImdbRatingValue"
        android:layout_alignRight="@+id/imgDisplay"
        android:text="IMDB Rating" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewMovieUi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ads:adSize="BANNER"
        ads:adUnitId="a153397577f3c4a" >

    </com.google.android.gms.ads.AdView>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adViewMovieUi"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginBottom="14dp"
        android:text="Swipe Down for DisLike" />

</RelativeLayout>
